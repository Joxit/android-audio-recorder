<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/frag_recorder_card_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dialog_item_image"
        android:layout_height="@dimen/dialog_item_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dialog_item_image_margin"
        android:layout_marginRight="@dimen/dialog_item_image_margin"
        android:background="@drawable/icon_superior" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/frag_record_card_texts_margin_left"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/AURE_DETAILS_QUALITY"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/dialog_mode_quality_title" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Superior"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray_secondary" />
    </LinearLayout>
</RelativeLayout>