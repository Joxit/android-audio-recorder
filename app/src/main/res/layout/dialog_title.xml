<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/dialog_title_padding_side"
        android:paddingTop="@dimen/dialog_title_padding"
        android:paddingRight="@dimen/dialog_title_padding_side"
        android:paddingBottom="@dimen/dialog_title_padding"
        android:textAppearance="?android:dialogTitle"
        android:textSize="@dimen/dialog_title_text" />
</LinearLayout>